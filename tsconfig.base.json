{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@ecommerce-microservices/common": ["libs/common/src/index.ts"],
            "@ecommerce-microservices/core": ["libs/core/src/index.ts"],
            "@ecommerce-microservices/event-store": [
                "libs/event-store/src/index.ts"
            ],
            "@ecommerce-microservices/prisma": ["libs/prisma/src/index.ts"],
            "@ecommerce-microservices/proto-schema": [
                "libs/proto-schema/src/index.ts"
            ],
            "@ecommerce-microservices/repository": [
                "libs/repository/src/index.ts"
            ]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
